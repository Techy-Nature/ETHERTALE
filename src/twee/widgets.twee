/* /SetGender>> widget - Start - By HiEv */
<<widget "SetGender">><<nobr>>
/* Usage... (defaults to male) */
/* for "he":   <<SetGender>> or <<SetGender "m">> */
/* for "she":  <<SetGender "f">> */
/* for "they": <<SetGender "n">> */
/* for "it":   <<SetGender "i">> */
/* $pgen: 0 = male, 1 = female, 2 = gender neutral, 3 = no gender */
	<<switch $args[0]>>
		<<case "m">>
			<<set $pgen = 0>>
		<<case "f">>
			<<set $pgen = 1>>
		<<case "n">>
			<<set $pgen = 2>>
		<<case "i">>
			<<set $pgen = 3>>
		<<default>>
			<<set $pgen = 0>>
	<</switch>>
<</nobr>><</widget>>
/* /SetGender>> widget - End */
